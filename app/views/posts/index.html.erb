<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Date</th>
    <th>Operations</th>
  </tr>

  <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post_path(post)  %></td>
        <td><%= post.body %></td>
        <td><%= post.created_at %></td>
        <td><%= link_to 'Destroy', post_path(post),
                        method: :delete, data: { confirm: 'Are you sure?' } %> | <%= link_to 'Edit', edit_post_path(post) %></td>

      </tr>

  <% end %>
  <%= link_to 'New post', new_post_path %>
</table>