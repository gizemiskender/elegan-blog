<%= form_for @post do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </p>

    <p>
      <%= f.label :author %><br>
      <%= f.text_field :author %>
    </p>

    <p>
      <%= f.label :category %><br>
      <%= f.collection_select(:category_id, @categories, :id, :name)%>
    </p>


    <p>
      <%= f.submit %>
    </p>
<% end %>

<%= link_to 'Back', posts_path %>